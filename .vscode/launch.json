{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Unified Server (HTTP + MCP)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nodemon"
      ],
      "args": [
        "${workspaceFolder}/unified-server.js"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
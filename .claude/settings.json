{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "sh ~/.mcp-voice-hooks/hooks/stop-hook.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "^(?!mcp__voice-hooks__).*",
        "hooks": [
          {
            "type": "command",
            "command": "sh ~/.mcp-voice-hooks/hooks/pre-tool-hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^mcp__voice-hooks__",
        "hooks": [
          {
            "type": "command",
            "command": "sh ~/.mcp-voice-hooks/hooks/post-tool-voice-hook.sh"
          }
        ]
      }
    ]
  }
}